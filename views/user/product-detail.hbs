                                        <div class="details-action-col">
                                           

                                            <button onclick="addToCart('{{product._id}}')" class="btn-product btn-cart"><span>add to cart</span></button>
                                        </div><!-- End .details-action-col -->

                                        <div class="details-action-wrapper">
                                            <button  onclick="AddWishList('{{this._id}}')"  style="border:0px;background-color:white" class="btn-product btn-wishlist" title="Wishlist"><span>Add to Wishlist</span></button>
