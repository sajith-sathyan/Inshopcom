    <script>
        function addToCart(proId) {
            console.log("inside ajax js");
            $.ajax({
                url: "/add-to-cart/" + proId,
                method: "get",
                success: (response) => {
                    if (response.status) {
                        Swal.fire({

                            icon: 'success',
                            title: 'This in your cart',
                            showConfirmButton: false,
                            timer: 1500
                        })

                    }

                }
            })
        }
    </script>
    <script>
        function AddWishList(proId) {
            console.log("loggd")
            $.ajax({
                url: "/addWishlist/" + proId,
                method: "get",
                data: {
                    proId
                },
                success: (response) => {
                    console.log("responce")
                    Swal.fire({

                            icon: 'success',
                            title: 'This in your wishlist',
                            showConfirmButton: false,
                            timer: 1500
                        })
                }
            })
        }

