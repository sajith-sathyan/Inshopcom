    <script>
        function changeQuantity(cartId, proId, count, userId) {
            console.log("changeQuantity")
            let quantity = parseInt(document.getElementById(proId).innerHTML)
            count = parseInt(count)
            let a = quantity + count
            console.log("----------", a)
            if (a > 0) {
                $.ajax({
                    url: '/change-product-quantity',
                    data: {
                        user: userId,
                        cart: cartId,
                        product: proId,
                        count: count
                    },
                    method: 'post',
                    success: (response) => {
                        console.log(response)
                        if (response.removeProduct) {
                            alert("product removed")
                            location.reload()
                        } else {

                            document.getElementById(proId).innerHTML = quantity + count
                            document.getElementById('totals').innerHTML = response.total
                        }
                    }
                })
            } else {
                alert("must to be one quantity in a product")
            }


        }
    </script>
    <script>
        $('#checkCoupon').click((e) => {
            console.log("stsrt")
            let coupon = document.getElementById("couponCode").value
            $.ajax({

                url: "/coupon",
                method: "post",
                data: {
                    coupon
                },
                success: (response) => {
                    if (response.status) {
                        Swal.fire({

                            icon: 'success',
                            title: 'Your work has been saved',
                            showConfirmButton: false,
                            timer: 1500
                        })

                        location.reload("/cart")
                    } else {
                        location.reload("/cart")
                    }

                }
            })
        })
    </script>
    <script>
        function RemoveCart(proId) {
            console.log(proId)
            $.ajax({
                url: "/remove-cart/" + proId,
                method: "post",
                data: {
                    proId
                },
                success: (response) => {    
                    console.log("responce work")
                    Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Your work has been saved',
                        showConfirmButton: false,
                        timer: 1500
                        
                    }).then(()=>{
                        location.reload()
                    })
                    
                }

            })

            console.log("logged")
        }
    </script>
